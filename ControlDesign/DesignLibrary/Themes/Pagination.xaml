        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Pagination}">
                    <WrapPanel>
                        <local:PaginationButton x:Name="PART_PREV" Background="{TemplateBinding Background}">
