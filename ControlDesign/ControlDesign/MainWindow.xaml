<Window x:Class="ControlDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlDesign" 
        xmlns:lib="clr-namespace:DesignLibrary;assembly=DesignLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0 5"></Setter>
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
        </Style>
    </Window.Resources>
    <AdornerDecorator>
        <StackPanel Margin="0 10 0 0">
            <GroupBox Header="启用">
                <WrapPanel>
                    <Button Content="Enabled" Width="100"></Button>
                    <TextBox Text="Enable"></TextBox>
                </WrapPanel>
            </GroupBox>

            <GroupBox Header="默认禁用(无法更改鼠标样式)">
                <WrapPanel>
                    <Button Content="Unabled" Width="100" IsEnabled="False" ></Button>
                    <TextBox Text="Unabled" IsEnabled="False" ></TextBox>
                </WrapPanel>
            </GroupBox>

            <GroupBox Header="禁用">
                <AdornerDecorator>
                    <WrapPanel>
                        <CheckBox Margin="10 0" VerticalAlignment="Center" x:Name="checkBox">Enable</CheckBox>
                        <Button Content="Unabled" Width="100" IsEnabled="{Binding ElementName=checkBox,Path=IsChecked}" 
                        lib:Assists.IsEnable="{Binding RelativeSource={RelativeSource Mode=Self},Path=IsEnabled}"></Button>
                        <TextBox Text="Enable" IsEnabled="{Binding ElementName=checkBox,Path=IsChecked}" 
                         lib:Assists.IsEnable="{Binding RelativeSource={RelativeSource Mode=Self},Path=IsEnabled}"></TextBox>
                    </WrapPanel>
                </AdornerDecorator>

            </GroupBox>
        </StackPanel>
    </AdornerDecorator>
</Window>
