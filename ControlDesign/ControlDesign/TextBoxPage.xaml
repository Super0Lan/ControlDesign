<Page x:Class="ControlDesign.TextBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ControlDesign"
      mc:Ignorable="d" 
      xmlns:lib="clr-namespace:DesignLibrary;assembly=DesignLibrary"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TextBoxPage">
    <AdornerDecorator>
        <StackPanel>
            <WrapPanel Margin="20" ItemWidth="200">
                <TextBox></TextBox>
                <TextBox IsEnabled="False"></TextBox>
                <TextBox lib:Assists.Clearable="True"></TextBox>
            </WrapPanel>
            <WrapPanel Margin="20" ItemWidth="200">
                <TextBox lib:Assists.Clearable="True"  lib:Assists.Icon="Alipay"></TextBox>
                <TextBox lib:Assists.Icon="Alipay"></TextBox>
                <TextBox lib:Assists.Clearable="True" lib:Assists.IconPosition="Right" lib:Assists.Icon="Applets"></TextBox>
            </WrapPanel>
            <WrapPanel Margin="20" ItemWidth="200">
                <TextBox lib:Assists.Icon="Alipay" lib:Assists.IconPosition="Right"></TextBox>
            </WrapPanel>
        </StackPanel>

    </AdornerDecorator>

</Page>
